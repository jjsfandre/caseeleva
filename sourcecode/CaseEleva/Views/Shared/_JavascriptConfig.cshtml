<script type="text/javascript">
    $(document).ready(function () {

        CE.Helpers.Globalization.SetConfig(@Html.Raw(GlobalizationController.GetInstance().GetJavascriptConfig()));
        $('.i-checks').removeAttr('checked');
        $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
        });

        CE.DeadlValidationFields(@Html.Raw(Json.Encode(@ViewBag.ValidationFields)));

        var config = {
            '.chosen-select': {},
            '.chosen-select-deselect': { allow_single_deselect: true },
            '.chosen-select-no-single': { disable_search_threshold: 10 },
            '.chosen-select-no-results': { no_results_text: CE.Helpers.Globalization.GetString("Oops, nothing found!") },
            '.chosen-select-width': { width: "95%" }
        }
        for (var selector in config) {
            $(selector).chosen(config[selector]);
        }
    });
</script>


