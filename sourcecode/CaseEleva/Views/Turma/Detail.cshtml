@model  TurmaViewModel
@using CaseEleva.Models.ViewModel;

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>
            @if (Model.Id.HasValue)
            {

                @(string.Format("{0} {1}", @GlobalizationController.GetInstance().GetString("Editing"), @Model.Codigo))
            }
            else
            {
                @GlobalizationController.GetInstance().GetString("New class")
            }
        </h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight detail-wrapper">
    <div class="row">
        <div class="col-lg-offset-2 col-lg-8">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm("Save", "Turma", FormMethod.Post, new { @class = "form-horizontal", @id = "form-turma-detail" })) {
                    @Html.HiddenFor(model => model.Id);
                    <div class="ibox-content">
                        <div class="row row-label">
                            @Html.LabelFor(model => model.Codigo, GlobalizationController.GetInstance().GetString("Code"), htmlAttributes: new { @class = "col-lg-3 required-symbol" })
                            @Html.LabelFor(model => model.Professor, GlobalizationController.GetInstance().GetString("Teacher"), htmlAttributes: new { @class = "col-lg-9  required-symbol" })
                        </div>
                        <div class="row">
                            <div class="col-lg-3 ">
                                @Html.TextBoxFor(model => model.Codigo, new {  @class = "form-control text-box single-line " })
                            </div>
                            <div class="col-lg-9 ">
                                @Html.TextBoxFor(model => model.Professor, new {  @class = "form-control text-box single-line" })
                            </div>
                        </div>
                        <div class="row row-label">
                            @Html.LabelFor(model => model.TotalAlunos, GlobalizationController.GetInstance().GetString("Total students"), htmlAttributes: new {@class = "col-lg-3 required-symbol" })
                            @Html.LabelFor(model => model.EscolaId, GlobalizationController.GetInstance().GetString("School"), htmlAttributes: new { @class = "col-lg-9 required-symbol" })
                        </div>
                        <div class="row">
                            <div class="col-lg-3 ">
                                @Html.TextBoxFor(model => model.TotalAlunos, new { @readonly="true", @type = "number", @class = "form-control text-box single-line " })
                            </div>
                            <div class="col-lg-9 ">
                                @Html.DropDownListFor(model => model.EscolaId, new SelectList(@ViewBag.Escolas, "Id", "Nome"), GlobalizationController.GetInstance().GetString("Select a school"), htmlAttributes: new { @class = "chosen-select form-control text-box single-line" })
                            </div>
                        </div>

                        <div class="row row-label">
                            @Html.LabelFor(model => model.Descricao, GlobalizationController.GetInstance().GetString("Description"), htmlAttributes: new { @class = "col-lg-12" })
                        </div>
                        <div class="row">
                            <div class="col-lg-12 ">
                                @Html.TextAreaFor(model => model.Descricao, new {  @class = "form-control text-box single-line " })
                            </div>
                        </div>
                    </div>

                    <div class="ibox-footer" >
                        <div class="form-group">
                            <span class="col-sm-12 ">
                                <button class="btn btn-w-m btn-danger EW-Button pull-right" type="button" onclick="location.href='/Turma/Index';">
                                    <i class="icon fa fa-times"></i><span class="">@GlobalizationController.GetInstance().GetString("Cancel")</span>
                                </button>
                                <button class="btn btn-w-m btn-primary EW-Button pull-right" type="submit">
                                    <i class="icon fa fa-check"></i><span class="">@GlobalizationController.GetInstance().GetString("Save")</span>
                                </button>
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

