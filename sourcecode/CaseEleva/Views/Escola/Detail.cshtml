@model  EscolaViewModel
@using CaseEleva.Models.ViewModel;

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>
            @if (Model.Id.HasValue)
            {

                @(string.Format("{0} {1}", @GlobalizationController.GetInstance().GetString("Editing"), @Model.Nome))
            }
            else
            {
                @GlobalizationController.GetInstance().GetString("New school")
            }
        </h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight detail-wrapper">
    <div class="row">
        <div class="col-lg-offset-2 col-lg-8">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm("Save", "Escola", FormMethod.Post, new { @class = "form-horizontal", @id = "form-escola-detail" })) {
                    @Html.HiddenFor(model => model.Id);
                    <div class="ibox-content">
                        <div class="row row-label">
                            @Html.LabelFor(model => model.Nome, GlobalizationController.GetInstance().GetString("Name"), htmlAttributes: new { @class = "col-lg-6 required-symbol" })
                            @Html.LabelFor(model => model.Diretor, GlobalizationController.GetInstance().GetString("School principal"), htmlAttributes: new { @class = "col-lg-6" })
                        </div>
                        <div class="row">
                            <div class="col-lg-6 ">
                                @Html.TextBoxFor(model => model.Nome, new {  @class = "form-control text-box single-line " })
                            </div>
                            <div class="col-lg-6 ">
                                @Html.TextBoxFor(model => model.Diretor, new {  @class = "form-control text-box single-line" })
                            </div>
                        </div>
                        
                        <div class="row row-label">
                            @Html.LabelFor(model => model.Logradouro, GlobalizationController.GetInstance().GetString("Public place"), htmlAttributes: new { @class = "col-lg-6 required-symbol" })
                            @Html.LabelFor(model => model.Numero, GlobalizationController.GetInstance().GetString("Number"), htmlAttributes: new { @class = "col-lg-2 required-symbol" })
                            @Html.LabelFor(model => model.Complemento, GlobalizationController.GetInstance().GetString("Complement"), htmlAttributes: new { @class = "col-lg-4" })
                        </div>
                        <div class="row">
                            <div class="col-lg-6 ">
                                @Html.TextBoxFor(model => model.Logradouro, new {  @class = "form-control text-box single-line " })
                            </div>
                            <div class="col-lg-2 ">
                                @Html.TextBoxFor(model => model.Numero, new {  @class = "form-control text-box single-line " })
                            </div>
                            <div class="col-lg-4 ">
                                @Html.TextBoxFor(model => model.Complemento, new { @class = "form-control text-box single-line" })
                            </div>
                        </div>

                        <div class="row row-label">
                            @Html.LabelFor(model => model.Cidade, GlobalizationController.GetInstance().GetString("City"), htmlAttributes: new { @class = "col-lg-4 required-symbol" })
                            @Html.LabelFor(model => model.Estado, GlobalizationController.GetInstance().GetString("State"), htmlAttributes: new { @class = "col-lg-4 required-symbol" })
                            @Html.LabelFor(model => model.Telefone, GlobalizationController.GetInstance().GetString("Telephone"), htmlAttributes: new { @class = "col-lg-4" })
                        </div>
                        <div class="row">
                            <div class="col-lg-4 ">
                                @Html.TextBoxFor(model => model.Cidade, new {  @class = "form-control text-box single-line " })
                            </div>
                            <div class="col-lg-4 ">
                                @Html.TextBoxFor(model => model.Estado, new {  @class = "form-control text-box single-line " })
                            </div>
                            <div class="col-lg-4 ">
                                @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control text-box single-line" })
                            </div>
                        </div>
                    </div>

                    <div class="ibox-footer" >
                        <div class="form-group">
                            <span class="col-sm-12 ">
                                <button class="btn btn-w-m btn-danger EW-Button pull-right" type="button" onclick="location.href='/Escola/Index';">
                                    <i class="icon fa fa-times"></i><span class="">@GlobalizationController.GetInstance().GetString("Cancel")</span>
                                </button>
                                <button class="btn btn-w-m btn-primary EW-Button pull-right" type="submit">
                                    <i class="icon fa fa-check"></i><span class="">@GlobalizationController.GetInstance().GetString("Save")</span>
                                </button>
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

